{
    "compilerOptions": {
        "module": "Node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "declaration": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "noImplicitReturns": true,
        "moduleResolution": "Node16",
        "sourceMap": true,
        "outDir": "dist",
    },
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "NodeNext",
        }
    },
    "include": [
        "src/**/*"
    ]
}